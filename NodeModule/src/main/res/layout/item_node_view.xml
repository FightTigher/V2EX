<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="viewModel"
            type="com.ecovacs.v2ex.viewmodel.NodeViewModel" />

    </data>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="12dp"
            android:textSize="14sp"
            android:background="@color/node_color"
            android:paddingBottom="@dimen/node_item_padding_top_bottom"
            android:paddingEnd="@dimen/node_item_padding_left_right"
            android:paddingStart="@dimen/node_item_padding_left_right"
            android:paddingTop="@dimen/node_item_padding_top_bottom"
            android:text="@{viewModel.name}" />

    </RelativeLayout>

</layout>